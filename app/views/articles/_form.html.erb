<%= render 'shared/errors', obj: @article %>

<div class="row">
    <div class="col-12">
        <%= form_for(@article, :html => {class: "form", role: "form"}) do |f| %>
            <div class="form-group">
                <%= f.label :title, class: "label-title" %>
                <%= f.text_field :title, class: "form-control"%>
            </div>
            <div class="form-group">
                <%= f.label :description, class: "label-title" %>
                <%= f.text_area :description, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.submit class: "btn btn-primary mb-2" %>
            </div>
        <% end %>

        [ <%= link_to 'Cancel request and go back to article listing', articles_path, class: "go_back_link" %> ]
    </div>
</div>
