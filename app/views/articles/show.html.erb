
<h2 align="center"><%= @article.title %></h2>
<div class="container content">
    <ul class="listing">
            <div class="row text-center">
                <div class="card" style="width: 18rem">
                    <img><%= link_to(gravatar_for(@article.user), user_path(@article.user)) if @article.user %></img>
                    <div class="card-body">
                        <div class="card-title"><%= link_to(@article.user.username, user_path(@article.user)) if @article.user %></div>
                        <div><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></div>
                    </div>
                </div>
            </div>
        </ul>
    <%= @article.description %>
</div>
<div class="container text-center" style="margin-top: 25px">
    <hr>
    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
        <%= link_to 'Delete this article', article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger btn-sm" %>
        <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-success btn-sm" %> 
    <% end %>
    <%= link_to 'Back to article listing', articles_path, class: "btn btn-primary btn-sm" %>
</div>