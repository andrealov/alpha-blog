
<h2 align="center"><%= @article.title %></h2>
<div class="container text-center">
    <%= @article.description %>
</div>
<div class="container text-center" style="margin-top: 25px">
    <hr>
    <%= link_to 'Back to article listing', articles_path, class: "btn btn-primary btn-sm" %>
    <%= link_to 'Delete this article', article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger btn-sm" %>
    <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-success btn-sm" %> 
</div>