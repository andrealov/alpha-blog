<div class="container">
    <h1 class="title">View All Users</h1>
    <% @users.each do |user| %>
        <ul class="listing">
            <div class="row text-center">
                <div class="card" style="width: 18rem">
                    <img><%= link_to gravatar_for(user), user_path(user) %></img>
                    <div class="card-body">
                        <div class="card-title"><%= link_to user.username, user_path(user) %></div>
                        <div><small><%= pluralize(user.articles.count, "article") if user.articles %></small></div>
                    </div>
                </div>
            </div>
        </ul>
    <% end %>
</div>