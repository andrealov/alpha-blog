<div class="container">
    <h1 class="title">Create new category</h1>
    <%= render 'shared/errors', obj: @category %>

    <div class="row">
        <div class="col-12">
            <%= form_for(@category, :html => {class: "form", role: "form"}) do |f| %>
                <div class="form-group">
                    <%= f.label :name, class: "label-title" %>
                    <%= f.text_field :name, class: "form-control"%>
                </div>
                <div class="form-group">
                    <%= f.submit "Create category", class: "btn btn-primary mb-2" %>
                </div>
            <% end %>

            [ <%= link_to 'Cancel request and go back to article listing', articles_path, class: "go_back_link" %> ]
        </div>
    </div>
</div>