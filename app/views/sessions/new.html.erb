<div class="container">
    <h1 class="title">Login</h1>
    <%= form_for(:session, :html => {class: "form", role: "form"}, url: login_path) do |f| %>
                <div class="form-group">
                    <%= f.label :email, class: "label-title" %>
                    <%= f.email_field :email, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :password, class: "label-title" %>
                    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
                </div>
                <div class="form-group">
                    <%= f.submit 'Login', class: "btn btn-primary mb-2" %>
                </div>
            <% end %>
</div>